source "gpg -d ~/.mutt/passwords.gpg |"

set editor=vim
# Automatically log in to this mailbox at startup
set spoolfile="imaps://mayankb2@imap.illinois.edu/INBOX"

#set spoolfile="imap://mayankb2@localhost:1143/INBOX"
#
set smtp_url=smtp://mayankb2:$smtp_pass@smtp.illinois.edu

#set smtp_url=smtp://mayankb2:$smtp_pass@localhost:1025
#set ssl_force_tls = yes
#set ssl_starttls=yes
# Define the = shortcut, and the entry point for the folder browser (c?)
set folder="imaps://imap.illinois.edu/INBOX"

#set folder="imap://localhost:1143/Inbox"
#
set record="=Sent"
set postponed="=Drafts"
#set ssl_starttls=yes
#set ssl_force_tls=yes
set imap_check_subscribed
set mail_check=60
set timeout=10
set header_cache=~/.hcache
set net_inc=5

set realname='Mayank Bhatt'
set from=mayankb2@illinois.edu
set hostname=illinois.edu
set signature="Mayank Bhatt"

#For vim
set text_flowed
#
#
#Use default colors
color normal default default
#Source color scheme
source ~/.mutt-black

#Pager settings
bind pager <up> previous-line #scroll inside the message rather than the index
bind pager <down> next-line

#Dealing with HTML email :(
# Sanely handle multi-part messages (prefer text part, but yield to
# # mailcap-configured rendering for html-only)
alternative_order text/plain text/html
auto_view text/html

set sort=threads

set sendmail="/usr/bin/msmtp"


set imap_keepalive=300

